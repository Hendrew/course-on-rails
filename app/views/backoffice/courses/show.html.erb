<div class="bg-white py-4 border-bottom">
  <div class="container">
    <div class="d-flex flex-column flex-md-row justify-content-md-between align-items-md-center flex-wrap flex-md-nowrap">
      <h2 class="h2 mb-3 m-md-0">Course details</h2>
      <nav>
        <%= link_to "Go back", backoffice_courses_path, class: "btn btn-outline-secondary", alt: "go back" %>
        <%= link_to "New content", new_backoffice_course_content_path(@course), class: "btn btn-outline-primary", alt: "new" %>
      </nav>
    </div>
  </div>
</div>

<div class="py-5 bg-light">
  <div class="container">
    <% if @course.contents.any? %>
      <div class="row gy-4">
        <%= render "left_column", course: @course %>
        <%= render "right_column", course: @course, content: @content %>
      </div>
    <% else %>
      <%= render "main_data", course: @course, content: nil %>
    <% end %>
  </div>
</div>
