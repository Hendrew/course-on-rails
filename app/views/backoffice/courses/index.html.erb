<div class="bg-white py-4 border-bottom">
  <div class="container">
    <div class="d-flex flex-column flex-md-row justify-content-md-between align-items-md-center flex-wrap flex-md-nowrap">
      <h2 class="h2 mb-3 m-md-0">Courses</h2>
      <nav class="d-flex">
        <div class="dropdown">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Download report
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "As CSV", download_report_backoffice_courses_path(report_format: :csv), data: { turbo: false },
                  class: "dropdown-item", alt: "download as csv" %>
            </li>
            <li>
              <%= link_to "As PDF", download_report_backoffice_courses_path(report_format: :pdf), data: { turbo: false },
                  class: "dropdown-item", alt: "download as pdf" %>
            </li>
          </ul>
        </div>
        &nbsp;&nbsp;
        <%= link_to "New", new_backoffice_course_path, class: "btn btn-outline-primary", alt: "new" %>
      </nav>
    </div>
  </div>
</div>

<div class="py-5 bg-light">
  <div class="container">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered mb-0">
            <thead>
              <tr>
                <th>Title</th> <th colspan="2">End date</th>
              </tr>
            </thead>

            <tbody>
              <% @courses.each do |course| %>
                <%= render course %>
              <% end %>

              <% if @courses.length.zero? %>
                <tr><td colspan="2">No courses found.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
