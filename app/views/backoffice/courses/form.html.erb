<div class="bg-white py-4 border-bottom">
  <div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
      <h2 class="h2 m-0">
        <%= @course.new_record? ? "New" : "Edit" %> course
      </h2>
      <%= link_to "Go back", backoffice_courses_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

<%= render "backoffice/shared/form_errors", record: @course %>

<div class="py-5 bg-light">
  <div class="container">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: [:backoffice, @course]) do |form| %>
          <div class="mb-3">
            <%= form.label :title, nil, class: "form-label is-required" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :image, nil, class: "form-label is-required" %>
            <%= form.file_field :image, class: "form-control" %>
            <%= form.hidden_field :image_cache %>
          </div>

          <div class="mb-3">
            <%= form.label :description, nil, class: "form-label is-required" %>
            <%= form.text_area :description, class: "form-control", rows: 6 %>
          </div>

          <div class="mb-3">
            <%= form.label :end_date, nil, class: "form-label is-required" %>
            <%= form.date_field :end_date, class: "form-control" %>
          </div>

          <div class="mt-3 text-center">
            <%= form.submit nil, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
